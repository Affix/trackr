<h1>Register</h1>
<%= form_for(@user) do |f| %>
    <div class="control-group">
      <%= f.text_field :firstname, class: "input-xlarge", placeholder: "Firstname"  %><br /><br />

      <%= f.text_field :lastname, class: "input-xlarge", placeholder: "Lastname" %><br /><br />

      <%= f.email_field :email, class: "input-xlarge", placeholder: "you@domain.tld" %><br /><br />

      <%= f.password_field :password, class: "input-xlarge", placeholder: "password" %><br /><br />

      <%= f.password_field :password_confirmation, class: "input-xlarge", placeholder: "Password Confirm" %><br /><br />

      <%= f.submit class: "btn btn-success"%>
    </div>
<% end %>
